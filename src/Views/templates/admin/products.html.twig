{% extends "baseTemplate.html.twig" %}
{% block meta %}
    <link rel="stylesheet" type="text/css" href="/e-commerce-php-les-bests-benjou-et-jeremoux/src/Views/style/adminProducts.css"/>
{% endblock %}
{% block title %}
	Products
{% endblock %}
{% block content %}
	<section class="s2">
		Create product:
		<form action="/e-commerce-php-les-bests-benjou-et-jeremoux/admin/products/create" method="post">
			<input type="text" placeholder="Product name" name="name" required>
			<input type="text" placeholder="Description" name="description" required>
			<input type="number" min="0" placeholder="Price" name="price" required>
			<input type="number" step="0.01" min="0" max="1" placeholder="TVA" name="tva" required>
			<input type="text" placeholder="Quantity" name="quantity" required>
			<input type="text" placeholder="img url" name="img" required>
			<button type="submit">Submit</button>
		</form>
	</section>
	<section class="s2"> 
		<form action="/e-commerce-php-les-bests-benjou-et-jeremoux/admin/products" method="get">
			<input type="text" placeholder="Search.." name="search">
			<button type="submit">Submit</button>
		</form>
	</section>
	<section id="s1">
		{% for product in data %}
		<div class="li">
			{% for elem in product %}
			<ul>{{ elem }}</ul>
			{% endfor %}
			<a href="/e-commerce-php-les-bests-benjou-et-jeremoux/admin/products/{{ product.TOP_ID }}">check</a>
		</div>
		{% endfor %}
	</section>
{% endblock %}
